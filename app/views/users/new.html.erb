<% provide(:title, 'Sign up') %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col"></div>
  <div class="mdl-cell mdl-cell--4-col">
    <h2>Sign Up</h2>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :name, "Name", class: "mdl-textfield__label"%>
        <%= f.text_field :name, class: "mdl-textfield__input" %>
      </div> 
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, "Email", class: "mdl-textfield__label" %>
        <%= f.text_field :email, class: "mdl-textfield__input" %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, "Password", class: "mdl-textfield__label" %>
        <%= f.password_field :password, class: "mdl-textfield__input" %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password_confirmation, "Confirmation", class: "mdl-textfield__label" %>
        <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
      </div>
      <%= f.submit "Create my account", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"%>
    <% end %>

  </div>
  <div class="mdl-cell mdl-cell--4-col"></div>
</div>