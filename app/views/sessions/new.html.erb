<% provide(:title, "Sign in") %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col"></div>
  <div class="mdl-cell mdl-cell--4-col">

  	<h2>Sign in</h2>
	<%= form_for(:session, url: sessions_path) do |f| %>
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
		  <%= f.label :email, "Email", class: "mdl-textfield__label" %>
		  <%= f.text_field :email, class: "mdl-textfield__input"%>
		</div>  
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">  
		  <%= f.label :password, "Password", class: "mdl-textfield__label" %>
		  <%= f.password_field :password, class: "mdl-textfield__input"  %>
		</div>	
		<div> 
		<%= f.submit "Sign in", :disable_with => 'Sign ining...', class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %> 
		<span class="nUQ">New user? <%= link_to "Sign up now!", signup_path, class: "mdl-button mdl-js-button  mdl-js-ripple-effect"%></span>
	  	</div>
	<% end %>
	
  </div>
  <div class="mdl-cell mdl-cell--4-col"></div>
</div>
