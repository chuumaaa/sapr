<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col">
  	<div class="mdl-card mdl-shadow--4dp user-action-card">
	  <div class="mdl-card__title mdl-card--border">
	    <h2 class="mdl-card__title-text">New test</h2>
	  </div>
	  <div class="mdl-card__supporting-text">
	    Start searching XSS and SQL-injection vulnerabilities on your site.
	  </div>
	  <div class="mdl-card__actions mdl-card--border">
	   <%= link_to "Create test", new_test_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color--light-green-800" %>
	  </div>
	</div>  	
  </div>
  <div class="mdl-cell mdl-cell--6-col">
    <div class="mdl-card mdl-shadow--4dp user-action-card">
      <div class="mdl-card__title mdl-card--border">
        <h2 class="mdl-card__title-text">History</h2>
      </div>
      <div class="mdl-card__supporting-text">
        View old test reports or test again.
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to "Open history", tests_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" %>
      </div>
    </div>
  </div>
</div>