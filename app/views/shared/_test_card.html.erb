<% @tests.each do |test| %>
<div class="mdl-cell mdl-cell--4-col">  	
  	<div class="mdl-card mdl-shadow--4dp test-action-card">
	  <div class="mdl-card__title mdl-card--border">
	    <h2 class="mdl-card__title-text"><%= test.name%></h2>
	  </div>
	  <div class="mdl-card__supporting-text">
	    <p><%= test.path%></p>
	    <p><%= test.description%></p>
	    <p><%= test.created_at%></p>
	  </div>
	  <div class="mdl-card__actions mdl-card--border">
	    <%= link_to "View report", test, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color--light-green-800" %>
	    <%= link_to 'Test again', edit_test_path(test), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color--purple-800" %>
	    <%= link_to "Delete" , test, method: :delete, data: { confirm: 'Are you sure?' }, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored mdl-color--red-800"%>
	  </div>
	</div> 		
</div>
<% end %> 